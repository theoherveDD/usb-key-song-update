# Configuration de production
NODE_ENV=production
PORT=3000

# Chemins (Ã  adapter selon votre serveur)
HARD_DRIVE_PATH=/path/to/music-library
USB_DRIVE_PATH=/path/to/usb-drive
DOWNLOAD_BASE_PATH=/path/to/downloads

# Spotify OAuth (mettre l'URL de votre serveur de production)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=https://your-domain.com/callback/spotify

# Beatport Download (identifiants fixes pour tous les utilisateurs)
BEATPORT_USERNAME=your-beatport-username
BEATPORT_PASSWORD=your-beatport-password

# Tidal (optionnel)
TIDAL_CLIENT_ID=your_tidal_client_id
TIDAL_CLIENT_SECRET=your_tidal_client_secret

# Database
DB_PATH=./data/usb-key-song.db

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log